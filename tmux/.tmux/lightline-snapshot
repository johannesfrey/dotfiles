# This tmux statusbar config was created by tmuxline.vim
# on Sun, 29 Jul 2018

set -g status-justify "centre"
set -g status "on"
set -g status-left-length "100"
set -g pane-active-border-style fg="colour6"
set -g status-style "none",bg="colour8"
set -g message-command-style bg="colour0",fg="colour7"
set -g pane-border-style fg="colour0"
set -g status-left-style "none"
set -g status-right-style "none"
set -g status-right-length "100"
set -g message-style bg="colour0",fg="colour7"
setw -g window-status-activity-style bg="colour8","none",fg="colour6"
setw -g window-status-separator ""
setw -g window-status-style fg="colour7","none",bg="colour8"
set -g status-left "#[fg=colour0,bg=colour6] #S #[fg=colour6,bg=colour8,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour0,bg=colour8,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour0] %R  %a  %Y #[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour0] #H "
setw -g window-status-format "#[fg=colour8,bg=colour8,nobold,nounderscore,noitalics]#[default] #I  #W #[fg=colour8,bg=colour8,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour8,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour0] #I  #W  #F #[fg=colour0,bg=colour8,nobold,nounderscore,noitalics]"
